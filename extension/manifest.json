{
  "manifest_version": 3,
  "name": "BetterLeetSync",
  "version": "1.0.0",
  "description": "Sync LeetCode solutions to your GitHub repository",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "http://localhost:*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*", "https://leetcode.com/problems/*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pageBridge.js"],
      "matches": ["https://leetcode.com/*"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html"
  }
}